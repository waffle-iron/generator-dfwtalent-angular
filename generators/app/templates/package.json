{
  "name": "<%= appname %>",
  "version": "0.0.1",
  "author": {
    "name": "Irving UI",
    "email": "irvui@verizon.com"
  },
  "scripts": {
    "postinstall": "typings install",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean -s",
    "build": "npm run build:scripts -s && npm run build:styles -s",
    "build:scripts": "tsc",
    "build:styles": "node-sass --include-path scss client/styles/app.scss client/assets/app.css",
    "postbuild": "gulp",
    "prewatch": "npm run clean -s",
    "watch": "npm run watch:scripts & npm run watch:styles",
    "watch:scripts": "tsc -w",
    "watch:styles": "node-sass -w client/styles/ -o client/assets/",
    "prestart":"npm run build",
    "start": "npm run live:reload & npm run watch & nodemon --ignore client --exec 'node' server/index.js",
    "test": "npm run test:client && npm run test:server",
    "test:server": "mocha server --recursive",
    "test:client": "tsc & karma start karma.conf.js",
    "test:e2e": "tsc & NODE_ENV=test node server/index.js & protractor protractor.config.js",
    "kill": "kill -9 $(lsof -ti tcp:9000)",
    "webdriver:update": "webdriver-manager update",
    "live:reload": "live-reload --port 9091 client/ server/",
    <%_ if(docker) { -%>
    "docker": "npm run build && docker build -t irvui/twizzle-ui:latest .",
    "docker:start": "docker run -p 3000:3000 irvui/twizzle-ui",
    <%_ } -%>
    "prod": "npm run build && cd dist && npm i --production && node server/index.js"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "2.0.0-rc.5",
    "@angular/compiler": "2.0.0-rc.5",
    "@angular/core": "2.0.0-rc.5",
    "@angular/forms": "0.3.0",
    "@angular/http": "2.0.0-rc.5",
    "@angular/platform-browser": "2.0.0-rc.5",
    "@angular/platform-browser-dynamic": "2.0.0-rc.5",
    "@angular/router": "3.0.0-rc.1",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "systemjs": "0.19.36",
    "zone.js": "^0.6.12",
    "angular2-in-memory-web-api": "0.0.14",
    "body-parser": "^1.15.2",
    "bootstrap-sass": "^3.3.7",
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "debug": "^2.2.0",
    "ejs": "^2.5.1",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "lodash": "^4.14.1",
    "morgan": "^1.7.0",
    "passport": "^0.3.2",
    "passport-github": "^1.1.0",
    "typings": "^1.3.2",
    "verror": "^1.6.1"
  },
  "devDependencies": {
    "concurrently": "^2.2.0",
    "typescript": "^1.8.10",
    "tslint": "^3.14.0",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-cli": "^0.1.2",
    "karma-htmlfile-reporter": "^0.2.2",
    "karma-jasmine": "^0.3.8",
    "browser-sync": "^2.14.0",
    "canonical-path": "0.0.2",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.1.0",
    "gulp-sourcemaps": "^1.6.0",
    "jasmine": "^2.4.1",
    "live-reload": "^1.1.0",
    "mocha": "^3.0.2",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.2",
    "phantomjs-prebuilt": "^2.1.12",
    "protractor": "^4.0.3",
    "ripe": "^0.2.1",
    "chai": "^3.5.0",
    "supertest": "^2.0.0"
  }
}
